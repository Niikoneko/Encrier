<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.niikoneko.encrier.userInterface.formulaires.SignalerBugController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Signaler un problème">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="errorMessage" textFill="RED" />
            <Label text="Votre problème sera automatiquement envoyé sur le projet Github de l'application en incluant les derniers journaux de fonctionnement de l'application. Ces journaux ne contiennent aucune information personnelle." textAlignment="JUSTIFY" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Court descriptif" />
            <TextField fx:id="titre">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Détails : dans quels conditions le problème est apparu ? Un maximum de détail facilite la résolution." wrapText="true" />
            <TextArea fx:id="description" prefHeight="150.0" prefWidth="200.0" />
         </children></VBox>
   </center>
   <bottom>
      <ButtonBar buttonMinWidth="50.0" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button fx:id="annuler" mnemonicParsing="false" onAction="#onAnnulerClick" text="Annuler" />
            <Label fx:id="progressMessage" />
            <ProgressBar fx:id="sendProgress" prefWidth="200.0" progress="0.0" />
          <Button fx:id="envoi" mnemonicParsing="false" onAction="#onEnvoyerClick" text="Envoyer" />
        </buttons>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</BorderPane>
